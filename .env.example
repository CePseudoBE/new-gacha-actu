# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# SECURITY: Generate strong passwords with:
#   openssl rand -base64 32

# ============================================
# Database Configuration (PostgreSQL 16)
# ============================================
DB_DATABASE=gachapulse
DB_USER=gachapulse
DB_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# ============================================
# Redis Configuration (Cache & Sessions)
# ============================================
REDIS_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# ============================================
# AdonisJS API Configuration
# ============================================
# Generate APP_KEY with: node ace generate:key
# Run this command in the apps/api directory
APP_KEY=CHANGE_ME_GENERATE_APP_KEY

# CORS Configuration
CORS_ORIGIN=https://gachapulse.com,https://www.gachapulse.com

# Admin User (for database seeders)
# IMPORTANT: Set a STRONG password for production!
ADMIN_EMAIL=admin@gachapulse.com
ADMIN_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# ============================================
# Nuxt Frontend Configuration
# ============================================
# IMPORTANT: API URL must be accessible from the CLIENT BROWSER
# Use the public domain with /api path (proxied by Nginx)
NUXT_PUBLIC_API_URL=https://gachapulse.com/api
NUXT_PUBLIC_SITE_URL=https://gachapulse.com

# ============================================
# Production SSL/Domain Configuration
# ============================================
# Email for Let's Encrypt certificate notifications
LETSENCRYPT_EMAIL=admin@gachapulse.com

# Domain name (without www)
DOMAIN=gachapulse.com
