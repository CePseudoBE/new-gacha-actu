TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info

# SECURITY: Generate with 'node ace generate:key'
# NEVER commit your actual APP_KEY to version control!
APP_KEY=

NODE_ENV=development

# Database Configuration
# IMPORTANT: Change these credentials in production!
# Generate strong passwords with: openssl rand -base64 32
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# Redis Configuration (for cache and rate limiting)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

SESSION_DRIVER=cookie
DRIVE_DISK=fs
APP_URL=https://gachapulse.com
LIMITER_STORE=redis
CACHE_STORE=redis

# CORS Configuration
# IMPORTANT: Change to your production domain!
# For production with HTTPS, use: https://gachapulse.com,https://www.gachapulse.com
# For development: http://localhost:3000,http://localhost
CORS_ENABLED=true
CORS_ORIGIN=https://gachapulse.com,https://www.gachapulse.com
CORS_CREDENTIALS=true

# Admin User Configuration (for seeders)
# IMPORTANT: Set a STRONG password for production!
# Generate with: openssl rand -base64 32
ADMIN_EMAIL=admin@gachapulse.com
ADMIN_PASSWORD=